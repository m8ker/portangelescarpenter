<%= simple_form_for(@header) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :title %>
    <%= f.input :quotation %>
    <%= f.input :phone %>
    <%= f.input :email %>
    <%= f.input :pdf_file_name %>
    <%= f.input :location %>
    <%= f.input :summary %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
